@using Microsoft.AspNetCore.Authorization
@using SquirrelsNest.Pecan.Client.Shared
@using SquirrelsNest.Pecan.Client.Projects
@using SquirrelsNest.Pecan.Shared.Constants

@attribute [Route( NavLinks.Issues )]
@attribute [Authorize( Roles = ClaimValues.cUser )]

<MudGrid Spacing="0" Justify="Justify.FlexStart">
    <MudItem xs="3">
        <ActiveProjectsList/>
    </MudItem>
    <MudItem xs="9" Class="pe-6">
        <MudStack Row="true">
            <MudText Class="mb-2 mt-1 d-flex flex-none" Typo="Typo.h6">Issues:</MudText>
            <MudContainer Class="d-flex flex-grow-1"/>
            <MudContainer Class="d-flex align-end">
                <IssueCommands />
            </MudContainer>
        </MudStack>
        <IssueList/>
    </MudItem>
</MudGrid>
