@using SquirrelsNest.Pecan.Client.Gravatar

@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" 
                       Color="Color.Inherit" 
                       Edge="Edge.Start" 
                       OnClick="@(DrawerToggle)" />
        <MudText Typo="Typo.h5">SquirrelsNest</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Text" OnClick="@OnAccount">
            <Gravatar />
        </MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="mDrawerOpen"
               Width="10em"
               ClipMode="DrawerClipMode.Always" 
               Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@inject NavigationManager   NavigationManager;

@code {
    bool mDrawerOpen = true;

    private void DrawerToggle() {
        mDrawerOpen = !mDrawerOpen;
    }

    private void OnAccount() {
        NavigationManager.NavigateTo( NavLinks.Account );
    }
}